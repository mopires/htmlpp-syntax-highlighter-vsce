{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "htmlpp",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#namespace"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#properties"
		}

	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.htmlpp",
				"match":
				"\\b(title|meta|style|div|closediv|a|button|input|p|javascript)\\b"
				
			}]
			
		},
		"namespace":{
			"patterns": [{
				"name": "entity.name.class.htmlpp",
				"match": "\\b(html|head|closehead|body|closebody|closehtml)\\b"
			}]

		},
		"strings": {
				"name": "string.quoted.double.htmlpp",
				"begin": "\"|\\'",
				"end": "\"|\\'",
				"patterns": [
					{
						"name": "constant.character.escape.htmlpp",
						"match": "\\\\."
					}
				]
			},
			"properties": {
				"patterns": [{
					"name": "variable.other.property",
					"match":
					"\\b(charset|class|href|id|label|src|value|type|placeholder)\\b"
					
				}]
			}
	},
	"semanticTokenColors": {
		"variable.other.property": {
			"foreground":"#3358ff"
		}
	},
	"scopeName": "*.htmlpp"
}